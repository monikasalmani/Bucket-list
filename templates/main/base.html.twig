<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=yes, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@200&family=Red+Hat+Mono&display=swap" rel="stylesheet">
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
    <link  rel="stylesheet" href="{{ asset('css/app.css') }}">
    <title>Bucket List</title>

</head>

<body>

<div class="entete">
    <img src="{{ asset('img/logo.png') }}" id="logo" alt="logo"/><h1>Bucket-List</h1>
    {% include 'inc/nav.html.twig'%}</div>
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-success flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
<div>{% block body %}{% endblock %}</div>

</body>
<footer id="pied">{% block pied %} <div>&copy Bucket-List {{ "now"|date("Y") }}</div>{% endblock %}</footer>
</html>